# Firebase Configuration
# Copy this file to .env and fill in your Firebase project details

FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-domain.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-bucket.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Development Configuration
USE_FIREBASE_EMULATORS=true

# Cross-Subdomain Authentication
# Set this to your root domain for production (e.g., .editora-sabia.com)
# Leave empty for localhost development
AUTH_COOKIE_DOMAIN= 